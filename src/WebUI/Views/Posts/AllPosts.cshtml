@model IEnumerable<WebUI.ViewModels.PostViewModel>
@{
    ViewBag.Title = Localizer["Title"];
}

<a class="btn btn-sm btn-primary" asp-action="Create" asp-controller="Posts">@Localizer["AddPost"]</a>
<table id="table" class="table">
    <caption>@Localizer["PostsList"]</caption>
    <tr><th>@Localizer["Date"]</th><th>@Localizer["PostTitle"]</th><th>@Localizer["Author"]</th><th></th></tr>
    @foreach (var post in Model)
    {
        <tr>
            <td>@post.Date</td>
            <td>@post.Title</td>
            <td>@post.Author</td>
            <td>
                <form asp-action="Delete" asp-controller="Posts" asp-route-postId="@post.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-controller="Posts" asp-route-postId="@post.Id">@Localizer["Edit"]</a>
                    <button type="submit" class="btn btn-sm btn-danger">@Localizer["Delete"]</button>
                </form>
            </td>
        </tr>
    }
</table>