
@model WebUI.ViewModels.EmailViewModel

@{
    Layout = "_Email";
}

<div class="email-container">
    <div class="email-wrapper">
        <div class="email-logo">
            <img class="email-logo-img" src="@Model.LogoUrl">
            <hr class="separator" />
        </div>
        <div class="email-content">
            <div class="email-header">
                <h1>Reset Your Password</h1>
            </div>
            <div class="email-text">
                <p>Hi @Model.AuthorName,</p>
                <p>You recently requested to reset your password for Open Diary account. Click the button below to reset it.</p>
            </div>

            <div class="email-button">
                <a class="btn-main" href="@Model.CallbackUrl" target="_blank">Reset your password</a>
            </div>

            <div class="email-text">
                If you did not request a password reset, please ignor this email.
            </div>
            <div class="email-copyrights">
                <p>Open Diary © 2020</p>
            </div>
        </div>
        <div class="email-footer">
            <hr class="separator" />
            <div class="email-mistake">
                <p>If you received this email by mistake, simply delete it.</p>
            </div>
        </div>
    </div>
</div>